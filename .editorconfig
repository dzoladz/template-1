# ---------------------------------------------------------------------
# Derek C. Zoladz, v1.0.0
# EditorConfig Spec: https://editorconfig-specification.readthedocs.io/
# ---------------------------------------------------------------------
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false
max_line_length = 119


# ---------------------------------
# Python
# ---------------------------------

[*.py]
indent_size = 4
insert_final_newline = true


# ---------------------------------
# JavaScript
# ---------------------------------

[*.json]
insert_final_newline = ignore

[**.min.js]
indent_style = ignore
insert_final_newline = ignore


# ---------------------------------
# Miscellaneous
# ---------------------------------

[*.{markdown,md}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[test/*]
trim_trailing_whitespace = false